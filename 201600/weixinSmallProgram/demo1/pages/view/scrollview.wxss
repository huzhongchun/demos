.view-container{
    display: block;
    width: 100%;
}

.scroll-view-item{
    display: block;
    width: 100%;
    white-space: nowrap;
    margin-bottom: 20px;
    border:1px solid #ccc;
}
.scroll-xx .scroll-content-item{
    display: inline-block;
    width: 80%;
    height: 50px;
    background: #fff100;
    border-right:4px solid #000;
}

.scroll-yy .scroll-content-item{
    display: block;
    width:100%;
    height: 50px;
    border-bottom: 4px solid #000;
    background: #fff100;
}


.swiper-content-item{
    display: block;
    width: 100%;
}
.swiper-item{
    display: block;
}
.slide-image{
    display: block;
    width: 100%;
}